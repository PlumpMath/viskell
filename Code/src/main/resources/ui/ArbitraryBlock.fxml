<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import nl.utwente.viskell.ui.components.ArbitraryBlock?>
<fx:root type="nl.utwente.viskell.ui.components.ArbitraryBlock" xmlns:fx="http://javafx.com/fxml/">
    <BorderPane styleClass="value, block" pickOnBounds="false">
        <center>
            <VBox alignment="CENTER">
                <Button text="Next" fx:id="rngTrigger"/>
                <Label fx:id="value" styleClass="content" alignment="CENTER" maxWidth="300" maxHeight="50"/>
            </VBox>
        </center>
        <bottom>
            <VBox fx:id="outputSpace" pickOnBounds="false">
            	<Label fx:id="valueType" styleClass="inputType"/>
            </VBox>
        </bottom>
    </BorderPane>
</fx:root>
