<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<fx:root type="nl.utwente.group10.ui.components.blocks.input.DisplayBlock"
	xmlns:fx="http://javafx.com/fxml/">
	<BorderPane>
		<top>
			<Pane fx:id="inputSpace" maxHeight="0" />
		</top>
		<center>
			<BorderPane fx:id="block" styleClass="display, block" 
				minHeight="75" maxHeight="75" minWidth="150">
				<center>
					<Label text="${controller.output}" styleClass="content" />
				</center>
			</BorderPane>
		</center>
		<bottom>
			<Pane fx:id="outputSpace" maxHeight="0" />		
		</bottom>
	</BorderPane>
</fx:root>
