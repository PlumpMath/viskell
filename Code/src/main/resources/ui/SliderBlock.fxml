<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.*?>
<?import nl.utwente.viskell.ui.components.SliderBlock?>
<fx:root type="nl.utwente.viskell.ui.components.SliderBlock" xmlns:fx="http://javafx.com/fxml/">
    <BorderPane styleClass="value, block">
        <center>
            <VBox alignment="CENTER">
                <Slider min="0.0" max="1.0" fx:id="slider"/>
                <Label fx:id="value" styleClass="content"/>
                <!-- silly extra HBox to not break the argumentSpace css -->
                <HBox styleClass="argumentSpace">
                    <Label fx:id="valueType"/>
                </HBox>
            </VBox>
        </center>
        <bottom>
            <HBox fx:id="outputSpace"/>
        </bottom>
    </BorderPane>
</fx:root>
