<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import nl.utwente.viskell.ui.components.SliderBlock?>
<fx:root type="nl.utwente.viskell.ui.components.SliderBlock" xmlns:fx="http://javafx.com/fxml/">
	<BorderPane>
		<center>
			<BorderPane styleClass="value, block" minHeight="75" maxHeight="75" minWidth="150" maxWidth="150">
            	<center>
					<Slider min="0.0" max="1.0" fx:id="slider"></Slider>
            	</center>
            	<bottom>
					<Label text="${controller.value}" styleClass="content" />
            	</bottom>
			</BorderPane>
		</center>
		<bottom>
			<BorderPane fx:id="outputSpace" maxHeight="0" />
		</bottom>
	</BorderPane>
</fx:root>
