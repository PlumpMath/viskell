<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import nl.utwente.viskell.ui.components.ValueBlock?>
<fx:root type="nl.utwente.viskell.ui.components.ValueBlock" xmlns:fx="http://javafx.com/fxml/">
	<BorderPane>
		<center>
			<BorderPane fx:id="block" styleClass="value, block" minHeight="75" maxHeight="75" minWidth="150">
				<center>
					<Label text="${controller.value}" styleClass="content" />
				</center>
				<bottom>
					<BorderPane styleClass="argumentSpace">
						<center>
							<Label fx:id="valueType"/>
						</center>
					</BorderPane>
				</bottom>
			</BorderPane>
		</center>
		<bottom>
			<BorderPane fx:id="outputSpace" maxHeight="0"/>
		</bottom>
	</BorderPane>
</fx:root>
